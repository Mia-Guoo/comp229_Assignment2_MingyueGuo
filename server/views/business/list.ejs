<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-8">
      <h1><%=title %></h1>
      <% if(typeof displayName == 'string' && displayName) { %>

      <a href="/business-list/add" class="btn btn-primary" role="button">
      <i class ="fas fa-plus-circle"></i> Add a contact
   <%}%>
      </a>
      <br />
      <table class="table table-bordered table-striped table-hover">
        <!--HEader row-->
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Phone Number</th>
          <th class="text-center">Email</th>
          <% if(typeof displayName == 'string' && displayName) { %>

          <th class="text-center"></th>
          <th class="text-center"></th>
          <%}%>
        </tr>

        <!--Repetable Templet row-->
        <% for (let count=0; count<BusinessList.length; count++){%>
          <tr>
            <td class="text-centre "><%=BusinessList[count].name %></td>
            <td class="text-centre "><%=BusinessList[count].phoneNumber %></td>
            <td class="text-centre "><%=BusinessList[count].email %></td>
            
            <% if(typeof displayName == 'string' && displayName) { %>
            <td class="text-center col-1">
              <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
              <i class="fas fa-pencil-alt"></i> Edit</a>
          </td>
          <td class="text-center col-1">
              <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
              <i class="fas fa-trash-alt"></i> Delete</a>
          </td>
          <%}%>
          </tr>
        <%}%>
      </table>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
