<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter your name:"
            name="name"
            value="<%= business.name %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="phoneNumberTextField">Phone Number</label>
          <input
            type="text"
            class="form-control"
            id="phoneNumberTextField"
            placeholder="Enter your phone number:"
            name="phoneNumber"
            value="<%= business.phoneNumber %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="emailTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Enter your email address:"
            name="email"
            value="<%= business.email %>"
            required
          />
        </div>
      

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/business-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
